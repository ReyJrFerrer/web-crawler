{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": false,
		"allowImportingTsExtensions": false,
		"isolatedModules": true
	},
	"include": ["src"]
}
